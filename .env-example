# ======================================================
# DATABASE CONFIGURATION
# ======================================================
# Set the database driver you want to use.
# Supported PDO drivers (depending on PHP installation):
# mysql, pgsql, sqlite, sqlsrv, oci, firebird, dblib

DB_DRIVER=mysql


# ======================================================
# MySQL / MariaDB
# Requires: pdo_mysql
# ======================================================
# DB_DRIVER=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=database_name
# DB_USER=root
# DB_PASS=password
# DB_CHARSET=utf8mb4


# ======================================================
# PostgreSQL
# Requires: pdo_pgsql
# ======================================================
# DB_DRIVER=pgsql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=database_name
# DB_USER=postgres
# DB_PASS=password


# ======================================================
# SQLite
# Requires: pdo_sqlite
# ======================================================
# DB_DRIVER=sqlite
# DB_NAME=database.sqlite
# (DB_HOST, DB_PORT, DB_USER, DB_PASS not required)


# ======================================================
# SQL Server
# Requires: pdo_sqlsrv (Windows) or dblib (Linux alternative)
# ======================================================
# DB_DRIVER=sqlsrv
# DB_HOST=localhost
# DB_PORT=1433
# DB_NAME=database_name
# DB_USER=sa
# DB_PASS=password


# ======================================================
# Oracle
# Requires: pdo_oci
# ======================================================
# DB_DRIVER=oci
# DB_HOST=localhost
# DB_PORT=1521
# DB_NAME=XE
# DB_USER=system
# DB_PASS=password


# ======================================================
# Firebird
# Requires: pdo_firebird
# ======================================================
# DB_DRIVER=firebird
# DB_HOST=localhost
# DB_PORT=3050
# DB_NAME=/path/to/database.fdb
# DB_USER=SYSDBA
# DB_PASS=masterkey


# ======================================================
# Sybase / FreeTDS (Linux SQL Server alternative)
# Requires: pdo_dblib
# ======================================================
# DB_DRIVER=dblib
# DB_HOST=localhost
# DB_PORT=1433
# DB_NAME=database_name
# DB_USER=sa
# DB_PASS=password


# ======================================================
# JWT CONFIGURATION
# ======================================================

JWT_KEY=your_secret_token_here
